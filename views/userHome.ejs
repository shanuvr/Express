<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Product Page</title>

  
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-900">


  <nav class="bg-white shadow-md p-4 sticky top-0 z-50">
    <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">

   
      <div class="flex flex-col md:flex-row md:items-center md:space-x-6">
        <div class="text-2xl font-bold text-blue-600">MyShop</div>
        <div class="flex flex-col md:flex-row md:space-x-6 text-sm text-gray-700">
          <div><span class="font-semibold">User:</span> <%=user.name %></div>
          <div><span class="font-semibold">Phone:</span> <%=user.phone %></div>
          <div><span class="font-semibold">Email:</span> <%=user.email %></div>
        </div>
      </div>

      <div>
        <form action="/logout" method="get">
          <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md text-sm">
            Logout
          </button>
        </form>
      </div>

    </div>
  </nav>


  <main class="max-w-7xl mx-auto p-6">
    <h2 class="text-2xl font-bold mb-6">Featured Products</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% product.forEach((product)=>{ %>
        <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition">
          <h3 class="text-xl font-semibold text-blue-700 mb-2"><%=product.name %></h3>
          <p class="text-sm text-gray-500 mb-1"><strong>Category:</strong> <%=product.category %></p>
          <p class="text-lg font-bold text-green-600 mb-2"><%=product.price %></p>
          <p class="text-gray-700"><%=product.description %></p>
        </div>
      <% }) %>
    </div>
  </main>

</body>
</html>
