<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Products List</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-slate-50 min-h-screen p-8 font-sans">
    <nav class="bg-white shadow flex items-center justify-between px-8 py-4 mx-auto mt-8 max-w-5xl rounded-xl">
    <div class="flex items-center space-x-4">
      <svg class="w-8 h-8 text-blue-500" fill="none" viewBox="0 0 64 64">
        <circle cx="32" cy="32" r="28" stroke="currentColor" stroke-width="4" />
        <path d="M24 32l8 8 8-8" stroke="currentColor" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <span class="text-gray-800 text-xl font-bold tracking-wide">Admin Panel</span>
    </div>
    <div class="flex items-center space-x-4">
      <button class="px-4 py-2 rounded-lg bg-blue-500 text-white font-semibold shadow hover:bg-blue-600 transition" onclick="addUser()">Add New User</button>
      <button class="px-4 py-2 rounded-lg bg-blue-500 text-white font-semibold shadow hover:bg-blue-600 transition" onclick="addproducts()">add Products</button>
      <button class="px-4 py-2 rounded-lg bg-blue-500 text-white font-semibold shadow hover:bg-blue-600 transition" onclick="showproducts()">show Products</button>
      <button class="px-4 py-2 rounded-lg bg-gray-200 text-gray-700 font-semibold shadow hover:bg-gray-300 transition" onclick="logout()">Logout</button>
    </div>
  </nav>
  <div class="max-w-7xl mx-auto">
    <h1 class="text-3xl font-semibold text-slate-900 mb-8">Products</h1>

    <div class="overflow-x-auto rounded-lg shadow bg-white border border-slate-200">
      <table class="min-w-full divide-y divide-slate-200">
        <thead class="bg-indigo-50">
          <tr>
            <th class="px-6 py-3 text-left text-sm font-semibold text-indigo-700">Name</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-indigo-700">Price</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-indigo-700">Category</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-indigo-700">Description</th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-indigo-700">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-slate-100">
            <% products.forEach((products)=>{ %>
                <tr class="hover:bg-indigo-50 transition">
            <td class="px-6 py-4 whitespace-nowrap text-slate-900 font-medium"><%=products.name %></td>
            <td class="px-6 py-4 whitespace-nowrap text-slate-900 font-semibold"><%=products.price %></td>
            <td class="px-6 py-4 whitespace-nowrap text-slate-700"><%=products.category %></td>
            <td class="px-6 py-4 text-slate-700 max-w-xl truncate" title="A beautifully crafted chair with ergonomic design and premium materials.">
              <%=products.description %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap space-x-4">
              <a href="/edite2/<%= products._id %>"><button class="text-indigo-600 hover:text-indigo-800 font-semibold">Edit</button></a>
              <a href="/delete2/<%= products._id %>"><button class="text-red-600 hover:text-red-800 font-semibold">Delete</button></a>
            </td>
          </tr>
            <%})  %>
          
         
         
        </tbody>
      </table>
    </div>
  </div>
  <script>
    function logout(){
      fetch('/logout').then(()=>{
        window.location.href='/'
      })
    }

    function addUser(){
     window.location.href='addUser'
    }
    function addproducts(){
     window.location.href='addproduct'
    }
    function showproducts(){
      window.location.href ='showproducts'
    }
  </script>
</body>
</html>
